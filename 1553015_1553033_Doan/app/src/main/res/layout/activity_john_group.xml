<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    tools:context="com.example.kiat.a1553015_1553033_doan.JohnGroup"

    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="18dp"
    android:paddingRight="18dp" android:background="@drawable/group_layout">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="1dp"
            android:orientation="vertical"
            android:weightSum="1">
            <!--  Here you can put your logo or brand name  -->

            <TextView
                android:id="@+id/jg_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dp"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_person_white_24dp"
                android:drawablePadding="12dp"
                android:ems="10"
                android:hint="Username"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:padding="8dp"
                android:textColor="#FFFFFF"
                android:textColorHint="#fff"
                android:textSize="28sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f9d7db" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/ed_jg"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/group"
                    android:drawablePadding="12dp"
                    android:ems="10"
                    android:hint="Chưa có group"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#fff"
                    android:textSize="20sp" />
                <Button
                    android:id="@+id/bt_jg"
                    style="@style/Base.TextAppearance.AppCompat.Body1"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/login"
                    android:clickable="true"
                    android:padding="16dp"
                    android:text="Join"
                    android:textAllCaps="false"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </LinearLayout>
            <Button
                android:id="@+id/bt_create"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/login"
                android:clickable="true"
                android:padding="16dp"
                android:text="Create Group"
                android:textAllCaps="false"
                android:textColor="#fff"
                android:textSize="18sp" />

            <Button
                android:id="@+id/jg_thamgia"
                style="@style/Base.TextAppearance.AppCompat.Body1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@drawable/background_signup"
                android:clickable="true"
                android:padding="16dp"
                android:text="Sign up to Join Group"
                android:textAllCaps="false"
                android:textColor="#f16f7d"
                android:textSize="18sp" />
            <ListView
                android:layout_marginLeft="30dp"
                android:id="@+id/_list_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </ListView>
        </LinearLayout>




</LinearLayout>
